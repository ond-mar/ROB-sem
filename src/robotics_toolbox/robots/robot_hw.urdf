<robot name="simple_robot">

    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.3 0.3 0.3"/>
            </geometry> 
        </visual>
    </link>

    <link name="link_0_cylinder">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.5"/>
            </geometry>
            <origin xyz="0 0 0.25" rpy="0 0 0"/>
        </visual>
    </link>

    <joint name="joint0" type="revolute">
        <origin xyz="0 0 0.15" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit effort="1000.0" lower="-1.5707963267948966" upper="1.5707963267948966" velocity="0.5"/>
        <parent link="base_link"/>
        <child link="link_0_cylinder"/>
    </joint>

    <link name="link_1_sphere">
        <visual>
            <geometry>
                <sphere radius="0.06"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </visual>
    </link>

    <joint name="joint1" type="fixed">
        <origin xyz="0 0 0.5" rpy="0 0 0"/>
        <parent link="link_0_cylinder"/>
        <child link="link_1_sphere"/>
    </joint>

    <link name="link_2_cylinder">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.25"/>
            </geometry>
            <origin xyz="0 0 0.125" rpy="0 0 0"/>
        </visual>
    </link>

    <joint name="joint2" type="revolute">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <axis xyz="1 0 0"/>
        <limit effort="1000.0" lower="-1.5707963267948966" upper="1.5707963267948966" velocity="0.5"/>
        <parent link="link_1_sphere"/>
        <child link="link_2_cylinder"/>
    </joint>

    <link name="link_3_cylinder">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.25"/>
            </geometry>
            <origin xyz="0 0 0.125" rpy="0 0 0"/>
        </visual>
    </link>

    <joint name="joint3" type="revolute">
        <origin xyz="0 0 0.25" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit effort="1000.0" lower="-1.5707963267948966" upper="1.5707963267948966" velocity="0.5"/>
        <parent link="link_2_cylinder"/>
        <child link="link_3_cylinder"/>
    </joint>

    <link name="link_4_sphere">
        <visual>
            <geometry>
                <sphere radius="0.06"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </visual>
    </link>

    <joint name="joint4" type="fixed">
        <origin xyz="0 0 0.25" rpy="0 0 0"/>
        <parent link="link_3_cylinder"/>
        <child link="link_4_sphere"/>
    </joint>

    <link name="link_5_cylinder">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.25"/>
            </geometry>
            <origin xyz="0 0 0.125" rpy="0 0 0"/>
        </visual>
    </link>

    <joint name="joint5" type="revolute">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <axis xyz="1 0 0"/>
        <limit effort="1000.0" lower="-1.5707963267948966" upper="1.5707963267948966" velocity="0.5"/>
        <parent link="link_4_sphere"/>
        <child link="link_5_cylinder"/>
    </joint>

    <link name="end_effector">
    </link>

    <joint name="joint6" type="fixed">
        <origin xyz="0 0 0.25" rpy="0 0 0"/>
        <parent link="link_5_cylinder"/>
        <child link="end_effector"/>
    </joint>
</robot>